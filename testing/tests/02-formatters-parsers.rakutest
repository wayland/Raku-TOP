my $btable = Table.new(name => 'boxchars', action => 'ensure');
$btable.parse(
	format => 'CSV',
	filename => 'data/BoxDrawingCharacters.csv',
);

my $table2 = $btable.grep({
	.{'Primary Weight'} ~~ /^(Double)$/ 
	and .{'Block Name'} eq 'Box'
});

my $bout-table = $table2.format(
	'WithBorders',
#	show-headers => False,
);

